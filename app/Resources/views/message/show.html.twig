{% extends 'base.html.twig' %}

{% block body %}
    <h1>Message</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ message.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ message.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ message.content }}</td>
        </tr>
        <tr>
            <th>Timestamp</th>
            <td>{% if message.timestamp %}{{ message.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Sender</th>
            <td>{{ message.sender }}</td>
        </tr>
        <tr>
            <th>Recipient</th>
            <td>{{ message.recipient }}</td>
        </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('messages_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('messages_edit', { 'id': message.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
